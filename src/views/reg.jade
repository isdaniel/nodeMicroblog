extends layout

block content
  .jumbotron
    form(class='form-horizontal', method='post')
      fieldset
        div.control-group
          label(class='control-label', for='username') User Name
          div.controls
            input(type='text', class='input-xlarge', id='username', name='username')
            p.help-block Your name is used to login and display
        div.control-group
          label(class='control-label', for='password') Password
          div.controls
            input(type='password', class='input-xlarge', id='password', name='password')
        div.control-group
          label(class='control-label', for='password-repeat') Password repeat
          div.controls
            input(type='password', class='input-xlarge', id='password-repeat', name='password-repeat')
        div.form-actions
          button(type='submit', class='btn btn-primary') Register
